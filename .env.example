# Kanban Board - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =============================================================================
# JWT Configuration
# =============================================================================
# JWT secret key for token signing (minimum 32 characters)
# Generate a secure random string for production
JWT_SECRET=dev_jwt_secret_minimum_32_characters_long_for_testing

# =============================================================================
# API Token Configuration
# =============================================================================
# API token hash secret key (minimum 32 characters)
API_TOKEN_SECRET=dev_api_token_secret_minimum_32_characters_long_for_testing
# Optional token prefix
API_TOKEN_PREFIX=kbp_

# =============================================================================
# Google OAuth Configuration
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# Email Configuration (MailerSend)
# =============================================================================
# Get API token from MailerSend: https://www.mailersend.com/
MAILERSEND_API_TOKEN=your_mailersend_api_token_here
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# Database Configuration (Production only - PostgreSQL)
# =============================================================================
# PostgreSQL database password
# Use a strong password for production
DB_PASSWORD=your_secure_production_database_password_here

# =============================================================================
# Frontend Configuration
# =============================================================================
# Frontend URL for CORS configuration
# Development: http://localhost
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost

# =============================================================================
# Cookie Configuration
# =============================================================================
# Cookie domain for authentication
# Development: localhost
# Production: yourdomain.com
COOKIE_DOMAIN=localhost

# =============================================================================
# SonarQube Configuration (Optional)
# =============================================================================
# SonarQube server URL
SONAR_HOST_URL=http://localhost:9000

# SonarQube authentication token
# Backend: sqp_1d338bbddaf5e05a5782da6b3f4f5118cbf129b6
# Frontend: squ_477df39c0bc1eb56d4becc251bcd7260d4de4125
SONAR_BACKEND_TOKEN=
SONAR_FRONTEND_TOKEN=
